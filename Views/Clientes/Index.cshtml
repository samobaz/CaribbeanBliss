@model IEnumerable<Caribbean2.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="reservation-container">
    <div class="container">
        <h1 class="text-center mb-4" style="color: #ffffff; font-family: 'Playfair Display', serif;">
            Gestión de Clientes
        </h1>
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h2 class="card-title mb-0">Clientes</h2>
                <a class="btn btn-primary" asp-action="Create">Crear Nuevo Cliente</a>
            </div>
            <div class="card-body">
                <table id="table" class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nombre Cliente</th>
                            <th>Correo Electrónico</th>
                            <th>Teléfono</th>
                            <th>Rol</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.email)</td>
                                <td>@Html.DisplayFor(modelItem => item.telefono)</td>
                                <td>@Html.DisplayFor(modelItem => item.idRol)</td>
                                <td>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="estadoCliente_@item.idCliente" @(item.ClienteEstado ? "checked" : "") disabled />
                                        <span class="estadoLabel" id="estadoLabel_@item.idCliente">
                                            @(item.ClienteEstado ? "Activado" : "Inactivo")
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.idCliente" class="btn btn-sm btn-warning" data-bs-toggle="tooltip" title="Editar">
                                        <ion-icon name="pencil-outline"></ion-icon>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.idCliente" class="btn btn-sm btn-info" data-bs-toggle="tooltip" title="Detalles">
                                        <ion-icon name="eye-outline"></ion-icon>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.idCliente" class="btn btn-sm btn-danger" data-bs-toggle="tooltip" title="Eliminar">
                                        <ion-icon name="trash-outline"></ion-icon>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            if ($.fn.DataTable.isDataTable('#table')) {
                $('#table').DataTable().destroy();
            }
            
            let table = $('#table').DataTable({
                destroy: true,
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                },
                pageLength: 5,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]],
                responsive: true,
                dom: '<"top"lf>rt<"bottom"ip><"clear">',
                columnDefs: [
                    {
                        targets: -1,
                        orderable: false,
                        searchable: false
                    }
                ]
            });
        });
    </script>
}

