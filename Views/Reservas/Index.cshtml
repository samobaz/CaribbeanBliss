@model IEnumerable<Caribbean2.Models.Reserva>

@{
    ViewData["Title"] = "Reservas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="reservation-container">
    <div class="container">
        <h1 class="text-center mb-4" style="color: #1e3d59; font-family: 'Playfair Display', serif;">
            Gestión de Reservas
        </h1>
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h2 class="card-title mb-0">Reservas</h2>
                <a class="btn btn-primary" asp-action="Create">Crear Nueva Reserva</a>
            </div>
            <div class="card-body">
                <table id="table" class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Reserva</th>
                            <th>Cliente</th>
                            <th>Habitación</th>
                            <th>Fecha Inicio</th>
                            <th>Fecha Fin</th>
                            <th>N° Personas</th>
                            <th>Precio Total</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.IdReserva)</td>
                                <td>@Html.DisplayFor(modelItem => item.Cliente.nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Habitacion.Nombre)</td>
                                <td>@item.FechaInicio.ToString("dd/MM/yyyy")</td>
                                <td>@item.FechaFin.ToString("dd/MM/yyyy")</td>
                                <td>@Html.DisplayFor(modelItem => item.NumeroPersonas)</td>
                                <td>@Html.DisplayFor(modelItem => item.PrecioTotal)</td>
                                <td>@Html.DisplayFor(modelItem => item.Estado.Nombre)</td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-action="Edit" asp-route-id="@item.IdReserva" class="btn btn-sm btn-warning" data-bs-toggle="tooltip" title="Editar">
                                            <ion-icon name="pencil-outline"></ion-icon>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.IdReserva" class="btn btn-sm btn-info" data-bs-toggle="tooltip" title="Detalles">
                                            <ion-icon name="eye-outline"></ion-icon>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdReserva" class="btn btn-sm btn-danger" data-bs-toggle="tooltip" title="Eliminar">
                                            <ion-icon name="trash-outline"></ion-icon>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            if ($.fn.DataTable.isDataTable('#table')) {
                $('#table').DataTable().destroy();
            }
            
            let table = $('#table').DataTable({
                destroy: true,
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                },
                pageLength: 5,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]],
                responsive: true,
                dom: '<"top"lf>rt<"bottom"ip><"clear">',
                columnDefs: [
                    {
                        targets: -1,
                        orderable: false,
                        searchable: false
                    }
                ]
            });
        });
    </script>
}

<style>
/* Add this to your site.css or create hotel-tables.css */

.reservation-container {
    background: #f8f9fa;
    padding: 2rem 0;
}

.card {
    border: none;
    box-shadow: 0 0 20px rgba(0,0,0,0.08);
    border-radius: 15px;
    overflow: hidden;
}

.card-header {
    background: linear-gradient(135deg, #1e3d59 0%, #2b5278 100%);
    padding: 1.5rem;
    border: none;
}

.card-header h2 {
    color: white;
    font-family: 'Playfair Display', serif;
    font-size: 1.8rem;
}

.btn-primary {
    background: #ff6e40;
    border: none;
    padding: 0.6rem 1.2rem;
    border-radius: 8px;
    transition: all 0.3s ease;
}

.btn-primary:hover {
    background: #ff5722;
    transform: translateY(-2px);
}

/* Table Styling */
.table {
    margin: 0;
}

.table thead th {
    background: #f1f4f8;
    color: #1e3d59;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.85rem;
    letter-spacing: 0.5px;
    padding: 1rem;
    border: none;
}

.table tbody tr {
    transition: all 0.3s ease;
}

.table tbody tr:hover {
    background-color: #f8f9fa;
    transform: scale(1.01);
}

.table td {
    padding: 1rem;
    vertical-align: middle;
    color: #495057;
    border-color: #f1f4f8;
}

/* Table Column Widths */
.table th:nth-child(1) { /* Reserva */
    width: 8%;
}
.table th:nth-child(2) { /* Cliente */
    width: 15%;
}
.table th:nth-child(3) { /* Habitación */
    width: 12%;
}
.table th:nth-child(4), 
.table th:nth-child(5) { /* Fechas */
    width: 12%;
}
.table th:nth-child(6) { /* N° Personas */
    width: 10%;
}
.table th:nth-child(7) { /* Precio Total */
    width: 12%;
}
.table th:nth-child(8) { /* Estado */
    width: 12%;
}
.table th:nth-child(9) { /* Acciones */
    width: 15%;
    min-width: 150px;
}

/* Action Buttons Container */
.action-buttons {
    display: flex;
    gap: 5px;
    justify-content: flex-start;
    align-items: center;
}

.btn-sm {
    padding: 0.4rem 0.8rem;
    margin: 0;
    border-radius: 6px;
    width: 38px;
    height: 38px;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Action Buttons */
.btn-sm {
    padding: 0.4rem 0.8rem;
    margin: 0 0.2rem;
    border-radius: 6px;
}

.btn-warning {
    background: #ffc13b;
    border: none;
    color: #fff;
}

.btn-info {
    background: #17a2b8;
    border: none;
    color: #fff;
}

.btn-danger {
    background: #dc3545;
    border: none;
}

/* DataTables Custom Styling */
.dataTables_wrapper .dataTables_length select {
    border-radius: 6px;
    padding: 0.375rem 1.75rem 0.375rem 0.75rem;
}

.dataTables_wrapper .dataTables_filter input {
    border-radius: 6px;
    padding: 0.375rem 0.75rem;
}

.dataTables_wrapper .dataTables_paginate .paginate_button.current {
    background: #1e3d59;
    border: none;
    color: white !important;
    border-radius: 6px;
}

.dataTables_info {
    color: #6c757d !important;
}

/* Responsive Design */
@@media (max-width: 768px) {
    .card-header {
        flex-direction: column;
        gap: 1rem;
    }
    
    .btn-primary {
        width: 100%;
    }
    
    .table td {
        padding: 0.75rem;
    }
}
</style>