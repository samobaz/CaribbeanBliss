@model Caribbean2.Models.Calificacion

@{
    ViewData["Title"] = "Eliminar Calificación";
    Layout = null;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2 class="card-title mb-0">Eliminar Calificación</h2>
                </div>
                <div class="card-body">
                    <h4>¿Estás seguro que deseas eliminar esta calificación?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">ID de Calificación</dt>
                        <dd class="col-sm-9">@Model.IdCalificacion</dd>

                        <dt class="col-sm-3">ID de Reserva</dt>
                        <dd class="col-sm-9">@Model.IdReserva</dd>

                        <dt class="col-sm-3">Cliente</dt>
                        <dd class="col-sm-9">@Model.Cliente.nombre</dd>

                        <dt class="col-sm-3">Puntuación</dt>
                        <dd class="col-sm-9">@Model.Puntuacion</dd>

                        <dt class="col-sm-3">Comentario</dt>
                        <dd class="col-sm-9">@Model.Comentario</dd>

                        <dt class="col-sm-3">Fecha de Calificación</dt>
                        <dd class="col-sm-9">@Model.FechaCalificacion.ToString("dd/MM/yyyy")</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdCalificacion" />
                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>